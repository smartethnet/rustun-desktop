<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Rustun.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rustun"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Rustun">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="Auto" />
            <!-- App Content -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar x:Name="AppTitleBar" 
                  Title="Rustun" 
                  Subtitle="Dev" 
                  IsPaneToggleButtonVisible="True" 
                  IsBackButtonVisible="{x:Bind rootFrame.CanGoBack, Mode=OneWay}"
                  PaneToggleRequested="TitleBar_PaneToggleRequested" 
                  BackRequested="TitleBar_BackRequested">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/Assets/app.ico" />
            </TitleBar.IconSource>
        </TitleBar>

        <!-- App content -->
        <NavigationView  Grid.Row="1" x:Name="NavView" 
                         PaneDisplayMode="Left" 
                         IsBackEnabled="False" 
                         OpenPaneLength="200"
                         IsBackButtonVisible="Collapsed"
                         IsPaneToggleButtonVisible="False"
                         SelectionChanged="NavView_SelectionChanged"
                         Loaded="NavView_Loaded">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Home" Tag="home" Icon="Home"/>
                <NavigationViewItem Content="Log" Tag="log" Icon="Document"/>
            </NavigationView.MenuItems>
            <Frame x:Name="rootFrame" Navigated="rootFrame_Navigated"/>
        </NavigationView>
    </Grid>
</Window>
