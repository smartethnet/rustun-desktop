<ui:FluentWindow x:Class="Rustun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rustun"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">
    <StackPanel>
        <!-- Title -->
        <ui:TitleBar x:Name="AppTitleBar" ShowMaximize="False" CanMaximize="False" Title="Rustun" FontSize="16">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/Assets/app.png"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- 添加卡片容器 -->
        <ui:Card Margin="8">
            <!-- 添加按钮 -->
            <ui:Button Content="Hello World" Icon="{ui:SymbolIcon Fluent24}" />
        </ui:Card>

    </StackPanel>
</ui:FluentWindow>
